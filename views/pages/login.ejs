<div class="container p-1">
    <% if (errors.length > 0) { %>
        <% errors.forEach(err => { %>
            <div class="alert alert-danger"><%= err.text %></div>
        <% }); %>
    <% } %>
    <div class="card" id="loginCard"><!--Container do Card-->
        <p class="mt-3 text-center mx-3"><!--Pequena Gambiarra para centralizar a logo-->
            <img src="/img/logo/logo.png" class="img img-fluid" width="200px" height="65px" alt="">
        </p>
        <div class="container"><!--Container para reduzir o tamanho interno do conteúdo-->
            <form class="mx-3" action="/login"><!--Área do formulário de login-->

                <div class="form-group"><!-- Inputs de login e senha -->
                    <label for="exampleInputEmail1">Usuário</label>
                    <input type="text" class="form-control" placeholder="Username" style="border-radius: 15px" name="email" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Senha</label>
                    <input type="password" class="form-control" placeholder="Password" style="border-radius: 15px" name="password" required>
                </div><!-- Fim dos inputs -->

                <p class="text-center mb-0"><!-- Botão para entrar -->
                    <button type="submit" class="btn btn-outline-dark align-center" style="width: 100%; border-radius: 15px"">Entrar</button>
                </p>
                <br/>
                <!-- Links de páginas externas -->
                <p class="mt-2 mb-0"><a href="#" style="font-size: 13px">Esqueceu a senha?</a></p>
                <p><a href="/register" style="font-size: 13px">Criar conta</a></p>
            </form><!-- Fim Form -->
        </div><!-- Fim container interno -->
        <br/>
    </div><!-- Fim do card -->
</div><!-- Fim do main container -->
