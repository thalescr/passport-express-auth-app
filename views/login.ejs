<!doctype html>
<html lang="pt-br">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- My  css file -->
        <link rel="stylesheet" href="bootstrap/css/estilo.css">
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="bootstrap/css/bootstrap.css">

        <style>
            #mainCard {
                width: 50%;
                margin: 0 auto;
            }
        </style>
        <!---->
        <title>Jairo Nation</title>
    </head>


    <body>
        <br/>
        <br/>
        <br/>
        <div class="container p-1">
            <div class="card" id="mainCard"><!--Container do Card-->
                <p class="mt-3 text-center mx-3"><!--Pequena Gambiarra para centralizar a logo-->
                    <img src="_logos/logocompleta.png" class="img img-fluid" width="200px" height="65px" alt="">
                </p>
                <div class="container"><!--Container para reduzir o tamanho interno do conteúdo-->
                    <form class="mx-3"><!--Área do formulário de login-->

                        <div class="form-group"><!--Inputs de login e senha-->
                            <label for="exampleInputEmail1">Usuário</label>
                            <input type="text" class="form-control" placeholder="Username" style="border-radius: 15px">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Senha</label>
                            <input type="password" class="form-control" placeholder="Password" style="border-radius: 15px">
                        </div><!--Fim dos inputs-->

                        <p class="text-center mb-0"><!--Botão para entrar, Mais gambiarra-->
                            <button type="submit" class="btn btn-outline-dark align-center" style="width: 100%; border-radius: 15px">Entrar</button>
                        </p>
                        <br/>
                        <!--Links de páginas externas-->
                        <p class="mt-2 mb-0"><a href="#" style="font-size: 13px">Esqueceu a senha?</a></p>
                        <p><a href="#" style="font-size: 13px">Criar conta</a></p>
                    </form><!--Fim Form-->
                </div><!--Fim container interno-->
                <br/>
            </div><!--Fim do card-->
        </div><!--Fim do main container-->
        
        

        <!-- Jquery e bootstrap.js (Para controle do carousel-->
        <script src="bootstrap/js/jquery-3.4.1.min.js"></script>
        <script src="bootstrap/js/bootstrap.min.js"></script>
    </body>
</html>
